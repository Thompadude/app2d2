<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="LightSideTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/bg_light_side</item>
        <item name="android:buttonStyle">@style/BtnLightSide</item>
    </style>

    <style name="DarkSideTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/bg_dark_side</item>
    </style>

    <style name="BtnLightSide" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/white</item>
    </style>

</resources>
