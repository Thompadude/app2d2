<resources>

    <style name="LightSideTheme">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/bg_light_side</item>
        <item name="android:buttonStyle">@style/BtnLS</item>
        <item name="android:radioButtonStyle">@style/RadioBtnStyleLS</item>
        <item name="android:textViewStyle">@style/TextViewLS</item>
        <item name="android:editTextStyle">@style/EditTextLS</item>
    </style>

    <style name="DarkSideTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/bg_dark_side</item>
        <item name="android:textViewStyle">@style/TextViewDS</item>
        <item name="android:editTextStyle">@style/EditTextDS</item>
    </style>

    <style name="BtnLS" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/white</item>
    </style>

    <style name="RadioBtnStyleLS" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">@color/black</item>
    </style>

    <style name="EditTextLS" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextDS" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewLS">
        <item name="android:background">@color/transparency</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewDS">
        <item name="android:background">@color/transparency</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
